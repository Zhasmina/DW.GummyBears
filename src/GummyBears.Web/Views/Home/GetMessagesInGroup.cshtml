@model GummyBears.Web.Models.AuthenticatedGroupMessagesModel

@{
    ViewBag.Title = "GetMessagesInGroup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GetMessagesInGroup</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@Html.HiddenFor(model => model.AuthenticationToken)
@Html.HiddenFor(model => model.UserId)
@Html.HiddenFor(model => model.GroupId)

<table class="table">
    <tr>
        <th>
            @Html.Label("Message")
        </th>
        <th>
            @Html.Label("Author")
        </th>
        <th>
            @Html.Label("Sent Date")
        </th>
    </tr>

@foreach (var item in Model.GroupMessages) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Message)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SendDate)
        </td>
    </tr>
}

</table>
