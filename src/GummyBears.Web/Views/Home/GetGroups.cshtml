@model GummyBears.Web.Models.AuthenticatedUserGroupsModel

@{
    ViewBag.Title = "GetGroups";
}
@{
    Layout = "~/Views/Shared/_AuthenticatedLayout.cshtml";
}
<!--/sidebar-menu-->
<div class="sidebar-menu">
    <header class="logo1"><img src="~/img/user-profile.png" style="max-width:170px;" /></header>
    <div style="border-top:1px ridge rgba(255, 255, 255, 0.15)"></div>
    <div class="menu">
        <ul id="menu">
            <li><a href=""><i class="fa fa-user"></i> <span>My Profile</span></a></li>
            <li><a href="@Url.Action("GetFeeds", "Home", new { token = Model.Token, userId = Model.Payload.Id })"><i class="fa fa-rss-square"></i> <span>Feeds</span></a></li>
            <li><a href="@Url.Action("Groups", "Home", new { token = Model.Token, userId = Model.Payload.Id })"><i class="fa fa-users"></i> <span>My Groups</span></a></li>
            <li><a href="@Url.Action( "GetUserCreations", "Home", new { token = Model.Token, userId = Model.Payload.Id })"><i class="fa fa-briefcase"></i> <span>My Creations</span></a></li>

        </ul>
    </div>
</div>
<div class="content">
    <h2>GetGroups</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>

    @Html.HiddenFor(m => m.UserId)
    @Html.HiddenFor(m => m.AuthenticationToken)

    <table class="table">
        <tr>
            <th>
                @Html.Label("GroupId")
            </th>
            <th>
                @Html.Label("GroupName")
            </th>
        </tr>

        @foreach (var item in Model.Groups)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GroupId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GroupName)
                </td>
            </tr>
        }

    </table>
    </div>